{
  "$schema": "vscode://schemas/settings/user",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.detectParticipant.enabled": false,
  "chat.edits2.enabled": false,
  "chat.extensionTools.enabled": false,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": false,
    "cursor-global": false,
    "cursor-workspace": false,
    "windsurf": false
  },
  "debug.onTaskErrors": "showErrors",
  "diffEditor.experimental.showMoves": true,
  "diffEditor.experimental.useTrueInlineView": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": false,
  "direnv.restart.automatic": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "always",
    "source.removeUnusedImports": "always"
  },
  "editor.cursorSurroundingLines": 14,
  "editor.cursorSurroundingLinesStyle": "default",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.hover.delay": 300,
  "editor.minimap.showSlider": "always",
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": false
  },
  "editor.renderWhitespace": "none",
  "editor.semanticHighlighting.enabled": true,
  "editor.smoothScrolling": true,
  "editor.stickyTabStops": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.matchOnWordStartOnly": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": false,
  "emmet.includeLanguages": {
    "templ": "html"
  },
  "errorLens.enabledDiagnosticLevels": ["error"],
  "eslint.codeAction.disableRuleComment": {
    "enable": false
  },
  "eslint.codeAction.showDocumentation": {
    "enable": false
  },
  "eslint.rules.customizations": [
    {
      "rule": "*",
      "severity": "info"
    }
  ],
  "explorer.compactFolders": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.fileNesting.patterns": {
    "*.db": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.s3db": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.templ": "${capture}_templ.go,${capture}_templ.txt",
    "*.ts": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "tsconfig.json": "tsconfig.*.json"
  },
  "explorer.openEditors.minVisible": 0,
  "explorer.openEditors.sortOrder": "editorOrder",
  "explorer.openEditors.visible": 20,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.sql": "sqlite"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.turbo": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/vite.config.*.timestamp*": true
  },
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreMissingGitWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pullBranch": "never",
  "go.toolsManagement.autoUpdate": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "js/ts.implicitProjectConfig.checkJs": true,
  "jupyter.askForKernelRestart": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  "notebook.output.wordWrap": true,
  "playwright.reuseBrowser": false,
  "prettier.printWidth": 120,
  "python.createEnvironment.trigger": "off",
  "redhat.telemetry.enabled": false,
  "remote.autoForwardPortsSource": "hybrid",
  "search.quickOpen.includeHistory": false,
  "security.allowedUNCHosts": ["wsl.localhost"],
  "security.promptForLocalFileProtocolHandling": false,
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "svelte.enable-ts-plugin": true,
  "svelte.plugin.svelte.defaultScriptLanguage": "ts",
  "tailwindCSS.includeLanguages": {
    "templ": "html"
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
  "terminal.integrated.fontSize": 14,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.commandCenter": false,
  "window.customMenuBarAltFocus": false,
  "window.titleBarStyle": "custom",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Dark (Molokai)",
  "workbench.editor.enablePreview": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showTabs": "none",
  "workbench.editor.tabSizing": "shrink",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.stickyScrollMaxItemCount": 2,
  "zig.zls.enabled": "on"
}
